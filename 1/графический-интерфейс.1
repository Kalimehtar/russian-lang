#!1
используется класс
  с-префиксом rkt: racket/gui
предоставлять главное-окно% текстовое-поле%

область<%> = интерфейс () родитель главное-окно минимальная-ширина минимальная-высота \
    минимальный-размер-вывода растягивается-ширина растягивается-высота

главное-окно<%> = интерфейс ()

главное-окно% = класс* объект% (главное-окно<%>)
  новый-базовый()
  новые-методы родитель главное-окно минимальная-ширина минимальная-высота минимальный-размер-вывода \
    растягивается-ширина растягивается-высота показать внутренний
  инициализировать
    заголовок ""
    ширина ложь
    высота ложь
    $минимальная-ширина(минимальная-ширина) ложь
    $минимальная-высота(минимальная-высота) ложь
    $растягивается-ширина(растягивается-ширина) истина
    $растягивается-высота(растягивается-высота) истина
  инициализированные-поля
    $родитель(родитель) ложь 
  $внутренний = объект rkt:frame%
    label заголовок
    width ширина
    height высота
    min-width $минимальная-ширина
    min-height $минимальная-высота    
    stretchable-width $растягивается-ширина
    stretchable-height $растягивается-высота
  родитель() = $родитель
  главное-окно() = этот
  внутренний() = $внутренний
  минимальная-ширина() =
    функция-выбора
      () $внутренний{min-width}
      (новое-значение) $внутренний{min-width новое-значение}
  минимальная-высота() =
    функция-выбора
      () $внутренний{min-height}
      (новое-значение) $внутренний{min-height новое-значение}
  минимальный-размер-вывода() = $внутренний{get-graphical-min-size}
  растягивается-ширина() =
    функция-выбора
      () $внутренний{stretchable-width}
      (новое-значение) $внутренний{stretchable-width новое-значение}
  растягивается-высота() =
    функция-выбора
      () $внутренний{stretchable-height}
      (новое-значение) $внутренний{stretchable-height новое-значение}
  показать(состояние) = $внутренний{show состояние}

текстовое-поле% = класс* объект% ()
  новый-базовый()
  новые-методы родитель главное-окно минимальная-ширина минимальная-высота минимальный-размер-вывода \
    растягивается-ширина растягивается-высота
  инициализированные-поля
    $родитель(родитель)() 
  инициализировать
    заголовок ложь
    $минимальная-ширина(минимальная-ширина) ложь
    $минимальная-высота(минимальная-высота) ложь
    $растягивается-ширина(растягивается-ширина) истина
    $растягивается-высота(растягивается-высота) истина
  $внутренний = объект rkt:text-field%
    parent $родитель{внутренний}
    label заголовок
    min-width $минимальная-ширина
    min-height $минимальная-высота    
    stretchable-width $растягивается-ширина
    stretchable-height $растягивается-высота
  родитель() = $родитель
  главное-окно() = $родитель{главное-окно}
  внутренний() = $внутренний
  минимальная-ширина() =
    функция-выбора
      () $внутренний{min-width}
      (новое-значение) $внутренний{min-width новое-значение}
  минимальная-высота() =
    функция-выбора
      () $внутренний{min-height}
      (новое-значение) $внутренний{min-height новое-значение}
  минимальный-размер-вывода() = $внутренний{get-graphical-min-size}
  растягивается-ширина() =
    функция-выбора
      () $внутренний{stretchable-width}
      (новое-значение) $внутренний{stretchable-width новое-значение}
  растягивается-высота() =
    функция-выбора
      () $внутренний{stretchable-height}
      (новое-значение) $внутренний{stretchable-height новое-значение}

#!1
используется класс
  графический-интерфейс/объект
  графический-интерфейс/интерфейс-элемент-управления
  графический-интерфейс/шрифт
  с-префиксом rkt: racket/gui/base

предоставлять кнопка%

внутренний-кнопки% = сформировать-код $ #` класс rkt:button%
  #,@начало-внутреннего
  переопределить #,@(отобразить имя-метода события-элемента-управления)
  #,@события-элемента-управления

стиль->английский список-терминов =
  отобразить
    функция (термин)
      выбор термин
        (граница) 'border
        (скрытая) 'deleted
    список-терминов

кнопка% = сформировать-код $ #` класс* объект-графического-интерфейса% (элемент-управления<%>)
  #,@начало
  методы #,@(отобразить имя-метода методы-элемента-управления)
  инициализировать
    $заголовок(заголовок)()
    #,@инициализация-элемента-управления
    $стиль(стиль) '()
    $шрифт(шрифт) шрифт-элемента-управления
    $команда(команда)
      функция (кнопка событие) пусто
  $внутренний := объект внутренний-кнопки%
    получатель-событий этот
    label $заголовок
    style
      стиль->английский $стиль
    font $шрифт{внутренний}
    callback $команда
    #,@внутренняя-инициализация-элемента-управления
  #,@методы-элемента-управления

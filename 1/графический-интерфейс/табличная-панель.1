#!1
используется класс
  графический-интерфейс/объект
  графический-интерфейс/панель
  графический-интерфейс/интерфейс-вместилище-окно
  графический-интерфейс/интерфейс-подобласть
  с-префиксом rkt: table-panel
предоставлять табличная-панель%

внутренний-табличной-панели% = сформировать-код $ #` класс rkt:table-panel%
  #,@начало-внутреннего
  переопределить #,@(отобразить имя-метода события-вместилища-окна)
  методы #,@(отобразить имя-метода внутренние-методы-вместилища-окна)
  #,@события-вместилища-окна
  #,@внутренние-методы-вместилища-окна

заполнять->английский термин =
  выбор термин
    (ряд) 'row
    (колонку) 'column
    иначе термин

заполнять->русский термин =
  выбор термин
    (row) 'ряд
    (column) 'колонку
    иначе термин

растягиваемость->английский термин =
  выбор термин
    (любая) 'any
    (каждая) 'every
    иначе термин

растягиваемость->русский термин =
  выбор термин
    (any) 'любая
    (every) 'каждая
    иначе термин

табличная-панель% = сформировать-код $ #` класс панель%
  унаследованные-поля $внутренний
  методы измерения заполнять
  инициализировать
    #,@(инициализация-вместилища-окна ''(лево центр))
    #,@(добавлена-инициализация-подобласти 0)
    $стиль(стиль) пустой-список
    $измерения(измерения) '(1 1)
    $заполнять(заполнять) 'ряд
    $колонки-растягиваются(колонки-растягиваются) 'любая
    $ряды-растягиваются(ряды-растягиваются) 'любая
  базовый-объект
    родитель $родитель
  $внутренний := объект внутренний-табличной-панели%
    получатель-событий этот
    style $стиль
    dimensions $измерения
    major-axis заполнять->английский($заполнять)
    column-stretchability растягиваемость->английский($колонки-растягиваются)
    row-stretchability растягиваемость->английский($ряды-растягиваются)
    #,@внутренняя-инициализация-вместилища-окна()
    #,@добавлена-внутренняя-инициализация-подобласти
  измерения = функция-выбора
    () $внутренний{get-dimensions}
    (ряды колонки) $внутренний{set-dimensions ряды колонки}
  заполнять = функция-выбора
    ()
      заполнять->русский $внутренний{get-major-axis}
    (значение) $внутренний{set-major-axis заполнять->английский(значение)}
  колонки-растягиваются = функция-выбора
    ()
      растягиваемость->русский $внутренний{get-column-stretchability}
    (значение)
      $внутренний{set-column-stretchability растягиваемость->английский(значение)}
  ряды-растягиваются = функция-выбора
    ()
      растягиваемость->русский $внутренний{get-row-stretchability}
    (значение)
      $внутренний{set-row-stretchability растягиваемость->английский(значение)}
